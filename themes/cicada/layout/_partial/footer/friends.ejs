<%
  let friends = {};
  if (theme.friends) {
    for (let name in theme.friends) {
      if (theme.friends[name]) {
        friends[name] = theme.friends[name];
      }
    }
  }
%>

<% if (Object.keys(friends).length !== 0) { %>
<hr>
<div class="blog-footer-friends">
  <p class="title">FRIENDS</p>
  <div class="friends">
  <% for (let name in friends) { %>
    <a href="<%= url_for(friends[name]) %>" target="_blank"><%= name %></a>
  <% } %>
  </div>
</div>
<% } %>